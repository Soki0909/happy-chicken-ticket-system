# Environment Configuration for Happy Chicken Ticket System

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
# For development (SQLite)
DB_TYPE=sqlite
DB_PATH=./data/tickets.db

# For production (PostgreSQL on Render.com)
# DATABASE_URL will be automatically provided by Render.com
# DATABASE_URL=postgresql://username:password@hostname:port/database

# Session Configuration
SESSION_SECRET=happychicken-super-secret-key-change-in-production-2024
SESSION_MAX_AGE=86400000

# Application Configuration
TICKET_EXPIRY_MINUTES=15
MAX_TICKETS_PER_DAY=1000
CLEANUP_INTERVAL_HOURS=1

# Happy Chicken Branding
BRAND_NAME=Happy Chicken
BRAND_COLORS_PRIMARY=#fbd205
BRAND_COLORS_SECONDARY=#fe8700
BRAND_COLORS_TEXT=#040404

# Admin Configuration
ADMIN_PATH=admin.html
ADMIN_AUTO_REFRESH_INTERVAL=10000

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100